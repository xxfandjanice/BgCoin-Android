<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_tab_style">
        <item name="android:paddingTop">@dimen/height_dp_10</item>
        <item name="android:paddingBottom">@dimen/height_dp_5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/sel_main_tab_tv</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="style_gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/cl_eaeaea</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextStyle2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextStyle3">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="style_home_tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:textColor">@drawable/sel_home_tab_tv</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_status_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/status_bar_translate_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="TopPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/top_in</item>
        <item name="android:windowExitAnimation">@anim/top_out</item>
    </style>
</resources>