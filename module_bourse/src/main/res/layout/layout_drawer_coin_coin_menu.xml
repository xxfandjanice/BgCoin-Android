<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/drawer_trade_menu_close"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:scaleType="center"
            android:src="@mipmap/icon_trade_drawer_close" />
    </RelativeLayout>
    
    <TextView
        android:textColor="@color/cl_333333"
        android:textSize="16sp"
        android:id="@+id/drawer_trade_menu_transform_money"
        android:gravity="center"
        android:text="@string/transform_money"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <TextView
        android:textColor="@color/cl_333333"
        android:textSize="16sp"
        android:id="@+id/drawer_trade_menu_pend_order"
        android:gravity="center"
        android:text="@string/my_pend_order"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:textColor="@color/cl_333333"
        android:textSize="16sp"
        android:id="@+id/drawer_trade_menu_history_delegation"
        android:gravity="center"
        android:text="@string/history_delegation"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:layout_marginEnd="25dp"
        android:textColor="@color/cl_333333"
        android:textSize="16sp"
        android:id="@+id/drawer_trade_menu_bill"
        android:gravity="center"
        android:text="@string/bill"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>