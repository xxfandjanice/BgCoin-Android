<?xml version="1.0" encoding="utf-8"?>
<com.fmtch.base.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_common_text33"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_note"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/color_common_text33"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_coin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/cl_19007aff"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="@color/theme"
                    android:textSize="12sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_unchecked" />

        </RelativeLayout>

        <View style="@style/Divider"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view_delete"
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_slide_delete" />


</com.fmtch.base.widget.SwipeMenuLayout>