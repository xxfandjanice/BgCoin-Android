<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <View style="@style/Divider" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/mine_icon_check_head" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_common_text44"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/color_common_FFF74D4D"
        android:textSize="15sp" />

    <com.wangnan.library.GestureLockView
        android:id="@+id/gl_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="bottom|center_horizontal"
        app:error_color="@color/color_common_FFF74D4D"
        app:is_use_animation="true"
        app:is_use_vibrate="true"
        app:line_thickness="1dp"
        app:normal_color="#B2007AFF"
        app:press_color="@color/theme" />

    <TextView
        android:id="@+id/tv_pwd_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/mine_pwd_login"
        android:textColor="@color/theme"
        android:textSize="12sp" />

</LinearLayout>