<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme</item>
        <item name="colorAccent">@color/theme</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/theme</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
